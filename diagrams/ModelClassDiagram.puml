@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class AddressBook
Class ModelManager
Class UserPrefs

Class UniquePersonList
Class UniqueTeamList
Class Person
Class Team
Class TeamName
Class Address
Class Email
Class Name
Class Phone
Class Tag
Class Dob
Class School
Class Role
Class Height
Class Weight
Class Session {
  +startDate : LocalDateTime
  +endDate : LocalDateTime
  +formatter : DateTimeFormatter
  +location : Location
  +MESSAGE_CONSTRAINTS : String
  +SESSION_ORDER : Comparator<Session>
  +getLocation() : Location
  +getStartDate() : LocalDateTime
  +getEndDate() : LocalDateTime
  +equals(Object) : boolean
  +hashCode() : int
  +toString() : String
}
Class Location

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

' Existing relations for Person
AddressBook *--> "1" UniquePersonList
UniquePersonList --> "~* all" Person
Person *---> Name
Person *---> Phone
Person *---> Email
Person *---> Address
Person *---> Dob
Person *--> School
Person *--> Role
Person *--> Height
Person *--> Weight
Person *--> "*" Tag

' New relations for Team
AddressBook *--> "1" UniqueTeamList
UniqueTeamList --> "~* all" Team
Team *--> "4" Person
Team *--> "*" Session
Team *--> "1" TeamName

' Session-related associations
Session *--> "1" Location

Person -[hidden]up--> I
UniquePersonList -[hidden]right-> I

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email
Email -[hidden]right-> Dob
Dob -[hidden]right-> School
School -[hidden]right-> Role
Role -[hidden]right-> Height
Height -[hidden]right-> Weight
Weight -[hidden]right-> Tag

Team -[hidden]down-> _Spacer
Session -[hidden]down-> _Spacer

class _Spacer #FFFFFF
ModelManager -[hidden]-> _Spacer
ModelManager --> "~* filtered" Person
@enduml
